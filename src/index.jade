img#haiiro-icon(src= '/images/haiiro.png')
#photo
  p.photographer Photo by Kengo Hamasaki

#profile
  .g-wide-5-24.g-1-24
  .g-wide-14-24.g-11-12
    #face
    h2.name= public._data.ogp['og:title']
    h3.occupation Planner, UI/UX Designer
    article!= public._data.ogp['og:description']

#career
  .g-wide-5-24.g-1-24
  .g-wide-14-24.g-11-12
    each item in public._data.careers
      .career-box
        .g-wide-1-4.g-1-1.term(class= item.present ? 'present' : '')
          = item.term
        .g-wide-3-4.g-1-1.content
          if item.content
            = item.content
          else
            a(href= item.link, target= '_blank')
              = item.company
            | &nbsp;
            = item.occupation
#links
  .g-wide-5-24.g-1-24
  .g-wide-14-24.g-11-12
    h2 Contacts to @haiji505
    each item in public._data.links
      .g-wide-1-3.g-1-1
        .link-box
          a(href= item.link, target= '_blank')
            .icon-box
              i.fa(class= 'fa-' + item.icon)
              span.link-name= item.name

#footer
  .g-wide-5-24.g-1-24
  .g-wide-14-24.g-11-12
    p#copyright
      | &copy;&nbsp;
      = new Date().getYear() + 1900
      | &nbsp;Haiji Haiiro.
      //
        br/
        | second line
